@model Workplaces.Models.RegisterModel

<h2 style="margin-top: 2em">Registration</h2>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>

    <div style="width: 50% " class="ui placeholder segment">
                <div class="ui form">
                    <div class="two fields">
                        <div class="field">
                            <label asp-for="Name">Type your name</label><br />
                            <input type="text" asp-for="Name" />
                            <span asp-validation-for="Name" />
                        </div>
                        <div class="field">
                            <label asp-for="SourName">Type your sourname</label><br />
                            <input type="text" asp-for="SourName" />
                            <span asp-validation-for="SourName" />
                        </div>
                    </div>
                    <div class="field">
                        <label>Email</label>
                        <input asp-for="Email" type="text" placeholder="Email">
                    </div>
                    <div class="field">
                        <label>Password</label>
                        <input asp-for="Password" type="password">
                    </div>
                    <div class="field">
                        <label asp-for="ConfirmPassword">Return password</label><br />
                        <input asp-for="ConfirmPassword" />
                        <span asp-validation-for="ConfirmPassword" />
                    </div>
                    <input style="background-color: #54354F" type="submit" class="ui blue submit button" value="Registration">
                </div>
    </div>
</form>