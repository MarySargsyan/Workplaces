@model Workplaces.Models.Workplace


<div class="row">
    <div class="col-sm-3">
    </div>
    <div class="col-sm-6">
        <div style="margin-top: 3em" class="ui segment">
            <h1 class="ui center aligned header">Order</h1>
            <h3 class="ui center aligned header">Do you want to order this table?</h3>
            <div class="container">
                <div style="margin-top: 1em; margin-left: 6em" class="row">
                    <div class="col">
                        @Html.DisplayNameFor(model => model.PlaceNumber)
                    </div>
                    <div class="col">
                        @Html.DisplayFor(model => model.PlaceNumber)
                    </div>
                </div>
                <div style=" margin-top: 1em;margin-left: 6em" class="row">
                    <div class="col">
                        Date
                    </div>
                    <div class="col">
                        @{DateTime date = @ViewBag.d;}
                        @date.Day/@date.Month/@date.Year
                    </div>
                </div>


            </div>
            <form style="margin-left: 30%; margin-top:2em" asp-action="OrderTable">

                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Order" class="ui button" style="background-color: #54354F; color: white; margin-right: 1em" />
                <a style="background-color: transparent;color: #54354F;border: #54354F 0.2em solid; padding: 0.46em 1em; border-radius: 0.3em" asp-action="Index">Back to List</a>

            </form>
        </div>

    </div>
    <div class="col-sm-3">
    </div>

</div>

