@model Workplaces.Models.Workplace

@{
    ViewData["Title"] = "Details";
}


<div>
    <h4>Workplace</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PlaceNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PlaceNumber)
        </dd>
    </dl>
</div>
<h1>Orders</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Date
            </th>
            <th>
                Employee
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var orders in Model.Orders)
        {
            <tr>
                <td>
                    @orders.Date.Day/@orders.Date.Month/@orders.Date.Year
                </td>
                <td>
                    @orders.User.Name
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
