@model Workplaces.Models.Workplace

@{
    ViewData["Title"] = "Create";
}
<div class="row">
    <div class="col-sm-3">
    </div>
    <div class="col-sm-6">
        <div style="margin-top: 3em" class="ui segment">
            <h1 class="ui center aligned header">Create</h1>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="container">
                    <div class="row">
                        <div class="col-sm-1"></div>
                        <div style="margin: 0em 3em" class="col">
                            <div class="form-group">

                                <label style="float:left">Place number</label>
                                <input style="display: inline"  asp-for="PlaceNumber" class="form-control" />
                                <span asp-validation-for="PlaceNumber" class="text-danger"></span>
                            </div>

                        </div>
                        <div class="col-sm-1"></div>
                    </div>
                </div>
                <div style="margin-left: 30%; margin-top:2em"  class="form-group">
                    <input type="submit" value="Create" class="ui button" style="background-color: #54354F; color: white" />
                    <a style="background-color: transparent;color: #54354F;border: #54354F 0.2em solid; padding: 0.46em 1em; border-radius: 0.3em" asp-action="Index">Back to List</a>
                </div>
            </form>
        </div>

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
