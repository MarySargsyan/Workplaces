@model Workplaces.Models.Workplace

@{
    ViewData["Title"] = "Edit";
}
<script language="JavaScript">
    function addInput()
    {
        var str = '<input type="text" class="class="form-control Placeitem">';
        document.getElementById('ItemsDiv').innerHTML = str;
    }
</script>
<h1>Edit</h1>

<h4>Workplace</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="PlaceNumber" class="control-label"></label>
                <input asp-for="PlaceNumber" class="form-control" />
                <span asp-validation-for="PlaceNumber" class="text-danger"></span>
            </div>
            <label asp-for="Items" class="control-label"></label>
            @foreach (var i in ViewBag.Items)
            {
                <div class="form-group">
                    <input class="form-control Placeitem" value="@i.Name" />
                </div>
            }
            <div class="form-group" id="ItemsDiv"></div>
            <button type="button" onclick="addInput()" class="btn addItem">Add item</button>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
