@model IEnumerable<Workplaces.Models.Workplace>

<div style="margin-top: 3em;" class="container">
    <div class="row">
        <div class="col-sm-10">
            <h1 style=" color: #515151" class="ui cennter aligned header">Work places</h1>
        </div>
        <div class="col-sm-2">
            <a style=" float:right; background-color: transparent; color: #54354F; border: #54354F 0.2em solid; padding: 0.46em 1em; border-radius: 0.3em" asp-action="Create"><i class="plus icon"></i>Create New</a>
        </div>
    </div>
</div>

<table style="margin-top: 2em;"  class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PlaceNumber)
            </th>
            <th>
                Items
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PlaceNumber)
            </td>
            <td>
                @foreach (var p in ViewBag.PItems)
                {
                    if (p.WorkplaceId == item.Id)
                    {
                        foreach (var i in ViewBag.Items)
                        {
                            if (p.ItemId == i.Id)
                            {
                                <li>@i.Name</li>

                            }
                        }
                    }
                }

            </td>
            <td>
                <a style="color: #54354F" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a style="color: #54354F" asp-action="Details" asp-route-id="@item.Id">Orders</a> |
                <a style="color: #54354F" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
